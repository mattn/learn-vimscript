4. リスト~
                                                          *learn-vimscript-list*

リストの表現
>
  let list = [1, 2, 3]
<
リストの要素の参照と代入
>
  let list = [1, 2, 3]
  let e0 = list[0]       " => 1
  let e2 = list[-1]      " => 3
  let e1_2 = list[1 : 2] " => [2, 3]
  let e_1 = list[ : 1]   " => [1, 2]
  
  let list[0] = 10
  let list[1] = 20
  " => list == [10, 20, 3]
<
リスト操作

  リストを操作する関数です。
>
  let list = [1, 2, 3]
  
  " len(リストの長さ)
  let length = len(list)  " 3

  " remove(任意の要素を削除する)
  let first = remove(list, 0)  " first == 1, list = [2, 3]
  let last = remove(list, -1)  " last == 3, list = [2]
  
  " insert(任意の位置に要素を追加)
  " (単純な関数の呼び出しには :call コマンドを使います。)
  call insert(list, 5, 0)  " list == [5, 2]
  
  " add(末尾に要素を追加)
  call add(list, 9)  " list == [5, 2, 9]
<
